---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';
import HeroSection from "../../components/HeroSection.astro";

// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
    const posts = await getCollection('projects');
    return posts.map(post => ({
        params: { id: post.id },
        props: { post },
    }));
}

// 2. For your template, you can get the entry directly from the prop
const { post } = Astro.props;
const { Content } = await render(post);
---


<Layout>
    <HeroSection
      title={post.data.title}
      cover={post.data.cover}
      coverAlt={post.data.coverAlt}
      overview={post.data.overview}
      role={post.data.role}
      timeline={post.data.timeline}
      team={post.data.team}
      type={post.data.type}
      tools={post.data.tools}
    />
    <article>
      <Content />
    </article>
</Layout>

<style is:global>

  article {
    display: flex;
    flex-direction: column;
    gap: 60px;
  }

  /* TODO: actually resize these images instead of relying on CSS */
  article img {
    max-width: 100%;
    height: auto;
  }

  a {
		color: var(--Text-Neutral-Link);
		text-decoration: none;
	}
  
  /* In StoryBlock, If the slot (block-content) has any child elements inside */
  .block-content :has(*) {
    background-color: var(--Color-Background);
    padding: 60px;
    border-radius: 8px;
  }

  /* When screen width < 600px */
  @media (max-width: 600px) {

    article {
      gap: 30px;
    }

    .block-content p {
      margin-bottom: 30px;
    }
  
    .block-content :has(*) {
      padding: 30px;
    }
  }
</style>
