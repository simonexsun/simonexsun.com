---
import { Image } from 'astro:assets';

interface Props {
    title: string;
    description: string;
    cover: ImageMetadata;
    coverAlt: string;
    id: string;
}

const { title, description, cover, coverAlt, id } = Astro.props as Props;
---

<div class="project-card">
    <div class="project-image">
        <Image src={cover} width=400 densities={[1.5, 2]} alt={coverAlt} />
    </div>
    <div class="project-content">
        <h3>{title}</h3>
        <p>{description}</p>
    </div>
</div>

<style>
    .project-card {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        overflow: hidden;
        transition:
            box-shadow 0.3s ease;
    }

    .project-card:hover {
    }

    .project-image {
        aspect-ratio: 16 / 9;
        align-self: stretch;
        border-radius: 8px;
        overflow: hidden;
        transition: 
            transform 0.5s ease;
        order: 1;
    }

    img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .project-card:hover img {
        transform: scale(1.05);
    }

    .project-content {
        gap: 0.75rem;
        display: flex;
        flex-direction: column;
        align-self: stretch;
        order: 2;
    }
    
    h3 {
        margin: 0;
    }

    p {
        margin: 0;
    }

    @media (max-width: 740px) {
        .project-image {
            order: 3;
        }

        .project-content {
            order: 1;
        }
    }
</style>
