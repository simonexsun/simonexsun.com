---
import { Image } from 'astro:assets';

interface Props {
    title: string;
    description: string;
    cover: ImageMetadata;
    coverAlt: string;
    id: string;
}

const { title, description, cover, coverAlt, id } = Astro.props as Props;
---

<div>
    <Image src={cover} width=400 alt={coverAlt} />
    <h3>{title}</h3>
</div>


