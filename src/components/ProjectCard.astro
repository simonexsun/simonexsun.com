---
import { Image } from 'astro:assets';

interface Props {
    title: string;
    description: string;
    cover: ImageMetadata;
    coverAlt: string;
    id: string;
}

const { title, description, cover, coverAlt, id } = Astro.props as Props;
---

<div class="project-card">

    <div class="project-image">
        <Image src={cover} width=400 alt={coverAlt} />
    </div>
    <div class="project-content">
        <h2>{title}</h2>
        <p>{description}</p>
    </div>
</div>

<style>
    .project-card {
        border-radius: 8px;
        overflow: hidden;
        background-color:"#fff";
        border: 1px solid #e0e0e0;
        transition:
            box-shadow 0.3s ease;
    }

    .project-card:hover {
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .project-image {
        aspect-ratio: 16 / 9;
        align-self: stretch;
        overflow: hidden;
        transition: 
            transform 0.5s ease;
    }

    img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .project-card:hover img {
        transform: scale(1.05);
    }

    .project-content {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 4px;
        align-self: stretch;
    }
    
    h2 {
        font-size: 1.5rem;
        font-style: normal;
        font-weight: 700;
        line-height: 120%;
        margin: 0;
    }

    p {
        font-size: 1rem;
        font-style: normal;
        line-height: 120%;
        color: #666;
        margin: 0;
    }

</style>
