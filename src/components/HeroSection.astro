---
import { Image } from 'astro:assets';

interface Props {
    title: string;
    cover: ImageMetadata;
    coverAlt?: string;
    overview?: string;
    [key: string]: any; // Allow any additional free-form fields
}

const { title, cover, coverAlt, overview, ...rest } = Astro.props as Props;

// Extract all free-form fields (exclude mandatory fields: title, cover, coverAlt, description)
// and overview (which is displayed separately)
const mandatoryFields = ['title', 'cover', 'coverAlt', 'description'];
const freeFormFields = Object.entries(rest)
    .filter(([key]) => !mandatoryFields.includes(key) && key !== 'overview')
    .filter(([_, value]) => value !== undefined && value !== null && value !== '');
---

<div class="hero">
  <!-- Project title -->
  <h1>{title}</h1>

  <!-- Hero image -->
  <div class="hero-image">
    {cover ? (
      <Image
        src={cover}
        alt={coverAlt ?? 'Hero image'}
        width={1200}
        sizes="100%"
        loading="eager"
      />
    ) : null}
  </div>

  <!-- Project Overview -->
  <div class="hero-content">
    {overview ? (
      <div style="display:flex; flex-direction:column; gap:24px">
        <p>{overview}</p>
      </div>
    ) : null}
    <ul class="project-specs">
      {freeFormFields.map(([key, value]) => {
        // For year field, extract just the year if it's a Date object, otherwise display as is
        let displayValue = value;
        if (key === 'date') {
          if (value instanceof Date) {
            displayValue = value.getFullYear();
          } else {
            displayValue = value;
          }
        }
        return (
          <li class="specs-item">
            <h5 class="specs-key">{key}</h5>
            <p class="specs-value">{String(displayValue)}</p>
          </li>
        );
      })}
    </ul>
  </div>
</div>

<style>

.hero {
  display: flex;
  flex-direction: column;
  gap: 40px;
  align-items: start;
  margin-bottom: 60px;
}

.hero-image {
  background-color: var(--Color-Background); /* light grey background while image loads */
  overflow: hidden;
  border-radius: 8px;
  display: block;
}

.hero-image img {
  width: 100%;
  max-width: 100%;
  height: auto;
  display: block;
  object-fit: cover;
}

.hero-content {
  display: flex;
  flex-direction: column;
  gap: 60px;
  width: 100%;
  margin: 0;
}

h1 {
  margin-bottom:0;
} 

p {
  margin:0;
}

.project-specs {
  display: flex;
  gap: 2rem;
  list-style: none;
  padding: 0;
  margin: 0;
  font-size: 0.95rem;
  width: 100%;
}

.specs-item {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  flex: 1;              /* make all items grow equally */
  min-width: 0;         /* prevent content overflow / text spill */
  overflow: auto;
}

.specs-key {
  text-transform: uppercase;
}

.specs-value {
  text-align: left;
  overflow: auto;
}

/* When screen width < 600px */
@media (max-width: 600px) {

  .hero {
    gap: 40px;              /* reduce spacing for mobile */
    margin-bottom: 30px;
  }

  .hero-content {
    gap: 30px;
  }

  .project-specs {
    flex-direction: column;  /* stack vertically */
    gap: 1rem;
  }

  .specs-item {
    flex-direction: row;     /* align key and value horizontally */
  }
  
  .specs-key {
    width: 30%;
  }

  .specs-value {
    text-align: left;
    overflow: auto;
    width: 100%;
  }
}
</style>
