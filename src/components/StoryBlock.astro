---
import { Image } from 'astro:assets';

interface Props {
    section_name: string;
    header: string;
    description: string;
}

const { section_name, header, description } = Astro.props as Props;
---

<div class="story-block">
    <div class="block-header">
        <h5>{section_name}</h5>
        <div class="text-strip">
            <h3 class="text-tile" set:html={header}></h3>
            <p class="text-tile" set:html={description}></p>
        </div>
    <div/>
    <div class="block-content">
        <slot />
    </div>
</div>

<style>
    .story-block {
        display: flex;
        flex-direction: column;
        gap: 60px;
        align-items: flex-start;
    }

    .block-header {
        display: flex;
        flex-direction: column;
        gap: 24px;
        width: 100%;
    }

    .text-strip {
        display: flex;
        align-items: flex-start;
        gap: 24px;
        align-self: stretch;
    }

    .text-tile {
        flex: 1;
        min-width: 0; /* Prevents overflow */
        flex-wrap: wrap;
        align-self: stretch;
    }

    h3 {
        margin: 0px;
        line-height: 100%;
    }
    
    p {
        margin: 0;
    }

    /* When screen width < 600px */
    @media (max-width: 600px) {

        .story-block {
            gap: 30px;
        }

        .block-header {
            gap: 20px;
        }
            
        .text-strip {
            flex-direction: column;  /* stack vertically */
            gap: 16px;               /* reduce spacing for mobile */
        }

    }
</style>
