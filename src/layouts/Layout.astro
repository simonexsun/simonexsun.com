---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/league-spartan";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Simone X Sun</title>
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		--Text-Hover: #cf3622;
		--Text-Neutral-Primary: #333;
		--Text-Neutral-Secondary: #5a5a5a;
		--Text-Neutral-Tertiary: #a0a0a0;
		--Text-Neutral-Link: #cf3622;
		--Color-Background: #f9f9f9;
	}

	h1 {
        font-size: 2.5rem;
        font-weight: 800;
        font-style: normal;		
		line-height: 120%;
        color: var(--Text-Neutral-Primary);
    }

	h2 {
		font-size: 1.75rem;
		font-weight: 600;
		font-style: normal;
		line-height: 120%;
		color: var(--Text-Neutral-Primary);
	}

	h3 {
		font-size: 1.5rem;
		font-weight: 400;
		font-style: normal;
		line-height: 120%;
		color: var(--Text-Neutral-Primary);
	}

	p {
        font-size: 1rem;
        font-weight: 300;
		font-style: normal;
		line-height: 110%;
		color: var(--Text-Neutral-Secondary);
	}

	ul {
		list-style: none;
		padding-left: 0;
	}

	li {
		font-size: 1.25rem;
		font-weight: 300;
		font-style: normal;
		line-height: 110%;
		color: var(--Text-Neutral-Primary);
	}

	a {
		color: var(--Text-Neutral-Secondary);
		text-decoration: none;
	}

	a:hover {
        color: var(--Text-Hover);
        transition: color 0.5s ease;
    }
</style>

<style>
	body {
		font-family: "League Spartan Variable", sans-serif;
		margin: 0;
		width: 100%;
		height: 100%;
	}

	main {
		padding: 0 10vw 10vh 10vw;
		align-items: center;
	}
</style>
